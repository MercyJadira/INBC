#:kivy 1.0
<splash>:

MDScreen:
    name: "pre-splash"
    MDFloatLayout:         
        md_bg_color: 1,1,1, 1
        Image:
            source: "img/fondo1.jpg"
            size_hint: 10,10
            pos_hint: {"center_x": .5, "center_y": .5}
            
        MDLabel:
            text: "CONTROL DE ASITENCIA"
            pos_hint: {"center_x": .7, "center_y": .55}
            haling: "center"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            font_size: "36sp"
            font_name: "estilo_letras/Poppins-SemiBold.ttf"

        MDLabel:
            text: "BIENVENIDO"
            pos_hint: {"center_x": .8, "center_y": .10}
            haling: "center"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            font_size: "20sp"
            font_name: "estilo_letras/Poppins-Regular.ttf"

#screenmanager:
#id: screen_manager